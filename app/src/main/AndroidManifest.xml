            android:screenOrientation="portrait" />

        <activity
            android:name=".UrlUploadActivity"
            android:theme="@style/LoginTheme"
            android:screenOrientation="portrait" />

        <activity
            android:name=".GoodsUploadActivity"
            android:theme="@style/LoginTheme"
            android:screenOrientation="portrait" />

        <activity
            android:name=".NoticeUploadActivity"
            android:theme="@style/LoginTheme"
            android:screenOrientation="portrait" />

        <activity
            android:name=".OfferingUploadActivity"
            android:theme="@style/LoginTheme"
            android:screenOrientation="portrait" />
    </application>

</manifest>